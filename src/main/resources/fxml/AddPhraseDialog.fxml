<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="com.redigo.languagelearningapp.view.AddPhraseDialogController"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-padding: 10 15 10 15;">
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 10 15 10 15;">
            <Label text="Phrase:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="phraseField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Translation:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="translationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Category:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="categoryField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Structure:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="structureField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Mastery Level:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Spinner fx:id="masterySpinner" GridPane.rowIndex="4" GridPane.columnIndex="1"/>




        </GridPane>
    </content>


</DialogPane>